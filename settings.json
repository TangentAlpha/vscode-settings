{
    // Sometimes I would like to see the diff of whitespaces and sometimes I would not.
    "diffEditor.ignoreTrimWhitespace": false,
    // Try out Cascadia Code.
    // Microsoft JhengHei UI is included such that the style of Chinese characters matches that of English characters.
    // Default: "Consolas, 'Courier New', monospace"
    "editor.fontFamily": "'Cascadia Code', Consolas, 'Microsoft JhengHei UI'",
    // Cascadia Code supports ligatures.
    "editor.fontLigatures": true,
    // Set such that more content can be displayed.
    // Default: 14
    "editor.fontSize": 12,
    // Set such that I do not have to worry about the format.
    "editor.formatOnSave": true,
    // Set for me to better observe the whitespaces.
    // This is useful when editing Markdown documents.
    "editor.renderWhitespace": "all",
    // The value 110 is my convention.
    "editor.rulers": [
        110,
    ],
    // In Markdown documents, there are long sentences/paragraphs.
    // Having word wrap allows me to better view them.
    "editor.wordWrap": "on",
    "files.exclude": {
        // The file is generated by Eclipse.
        // It maintains the project's source and target references for Java compilation and compressed file or project dependencies.
        "**/.classpath": true,
        // The file is generated by Eclipse.
        // The Factory Path preference pane specifies which processors are enabled and permits configuration of individual processors.
        // Settings in the Factory Path preference pane will only have an effect if Java annotation processing is enabled in the Annotation Processing preference pane.
        "**/.factorypath": true,
        // The Eclipse project description file
        "**/.project": true,
        // The folder is generated by Eclipse.
        // It contains a number of the preferences that can be maintained at the project level, for example, compiler warning/error levels or code style settings.
        "**/.settings": true,
    },
    // Set the value to that of "editor.fontSize".
    "terminal.integrated.fontSize": 12,
    // If Git Bash is used ("C:\\Program Files\\Git\\bin\\bash.exe"), Git commands can be used conveniently.
    // However, Git Bash does not work with Java.
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    // Set such that I do not have to manually resize the new window.
    "window.newWindowDimensions": "offset",
    // I may want to change the zoom level from time to time.
    "window.zoomLevel": 0,
    // A light theme is better for the eyes.
    // Default: "Default Dark+"
    "workbench.colorTheme": "Default Light+",
    // Set such that the name of the untitled file will not be derived from the content of the file, which is not helpful.
    "workbench.editor.untitled.labelFormat": "name",
    // Set such that words like "bytecode" will not be regarded as misspelled words.
    "cSpell.allowCompoundWords": true,
    // Check the spellings for ".gitignore" as well.
    "cSpell.enableFiletypes": [
        "ignore",
    ],
    // "Neighbour" (not "neighbor"), "colour" (not "color"), etc. are preferred.
    "cSpell.language": "en-GB",
    "cSpell.userWords": [
        "Cheung", // The romanization of "張"
        "Ctrl", // https://en.wikipedia.org/wiki/Control_key
        "Ethereum", // https://en.wikipedia.org/wiki/Ethereum
        "Firefox", // https://en.wikipedia.org/wiki/Firefox
        "HKUST", // https://en.wikipedia.org/wiki/Hong_Kong_University_of_Science_and_Technology
        "Hongkonger", // The singular of Hongkongers
        "Hongkongers", // https://en.wikipedia.org/wiki/Hongkongers
        "IntelliJ", // https://en.wikipedia.org/wiki/IntelliJ_IDEA
        "Kwan", // The romanization of "關"
        "L'Hospital's", // L'Hospital's rule
        "Maven", // https://en.wikipedia.org/wiki/Apache_Maven
        "Nakamoto", // Satoshi Nakamoto
        "Poisson", // Poisson distribution
        "Satoshi", // Satoshi Nakamoto
        "Tung", // The romanization of "東"
        "WhatsApp", // https://en.wikipedia.org/wiki/WhatsApp
        "analytics", // https://www.collinsdictionary.com/dictionary/english/analytics
        "anymore", // https://www.collinsdictionary.com/dictionary/english/anymore
        "app", // https://www.collinsdictionary.com/dictionary/english/app
        "apps", // The plural of app
        "artifact", // https://www.collinsdictionary.com/dictionary/english/artifact
        "artifacts", // The plural of artifact
        "async", // The abbreviation of asynchronous
        "detailedly", // https://www.collinsdictionary.com/dictionary/english/detailedly
        "dialog", // https://www.collinsdictionary.com/dictionary/english/dialog
        "geek", // https://www.collinsdictionary.com/dictionary/english/geek
        "incentivize", // https://www.collinsdictionary.com/dictionary/english/incentivize
        "lifecycle", // https://en.wikipedia.org/wiki/Life_cycle
        "lifecycles", // The plural of lifecycle
        "malware", // https://www.collinsdictionary.com/dictionary/english/malware
        "markdownlint", // https://marketplace.visualstudio.com/items?itemName=DavidAnson.vscode-markdownlint
        "movie", // https://www.collinsdictionary.com/dictionary/english/movie
        "movies", // The plural of movie
        "setup", // https://www.collinsdictionary.com/dictionary/english/setup
        "sharded", // The past tense and past participle of shard
        "shortcut", // https://www.collinsdictionary.com/dictionary/english/shortcut
        "shortcuts", // The plural of shortcut
        "startup", // https://www.collinsdictionary.com/dictionary/english/startup
        "timeout", // https://www.collinsdictionary.com/dictionary/english/timeout
        "uncheck", // https://www.collinsdictionary.com/dictionary/english/uncheck
        "webpage", // https://www.collinsdictionary.com/dictionary/english/webpage
        "workflow", // https://www.collinsdictionary.com/dictionary/english/workflow
        "workflows", // The plural of workflow
    ],
    // This setting is provided by Visual Studio IntelliCode.
    // Default: "recentlyUsed"
    "editor.suggestSelection": "first",
    // The style of "identicon" is the cleanest.
    // Default: "robohash"
    "gitlens.defaultGravatarsStyle": "identicon",
    // The mode of "zen" is activated to avoid interruptions.
    // Default: ""
    "gitlens.mode.active": "zen",
    // 4-space indentations are used everywhere, including in Markdown documents.
    "markdown.extension.list.indentationSize": "inherit",
    // Microsoft JhengHei UI is added.
    // Default: "-apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif"
    "markdown.preview.fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif, 'Microsoft JhengHei UI'",
    // Set the value to that of "editor.fontSize".
    "markdown.preview.fontSize": 12,
    "markdownlint.config": {
        // This controls the unordered list indentation.
        // 4-space indentations are used everywhere, including in Markdown documents.
        // Default: 2
        "MD007": {
            "indent": 4
        },
        // This controls the maximum line length allowed.
        // If this rule is set to be true, a lot of effort will be needed to ensure that it is followed.
        // The default "line_length" is 80.
        "MD013": false,
        // This controls the disallowed trailing punctuations in headings.
        // A question mark is allowed to end a heading.
        // Default: ".,;:!?。，；：！？"
        "MD026": {
            "punctuation": ".,;:!。，；：！"
        },
        // https://spec.commonmark.org/0.29/#block-quotes
        // CommonMark regards the reported situation as two block quotes.
        "MD028": false,
        // This rule requires fenced code blocks to be surrounded by blank lines.
        // But, some code blocks are embedded in paragraphs.
        // They should better not be surrounded by blank lines.
        "MD031": false,
        // This rule requires lists to be surrounded by blank lines.
        // But, some lists are embedded in paragraphs.
        // They should better not be surrounded by blank lines.
        "MD032": false,
        // https://daringfireball.net/projects/markdown/syntax#philosophy
        // https://stackoverflow.com/a/12091563
        // Avoid using HTML tags since it does not agree with Markdown's philosophy: "A Markdown-formatted document should be publishable as-is, as plain text, without looking like it's been marked up with tags or formatting instructions."
        "MD033": {
            "allowed_elements": [
                "div", // "<div>" can be used to centre images.
                "img", // Occasionally, I would like to adjust the dimensions of an image with "<img>" and so on.
            ]
        },
        // This rules' implementation is flawed.
        // "**_..._**...**...**" falsely triggers a warning.
        "MD037": false,
        // This rule requires the first line in file to be a top level heading.
        // Although this rule is disabled, it is a good guide.
        "MD041": false,
    },
    // This setting is provided by Visual Studio IntelliCode.
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
}